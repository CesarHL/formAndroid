            <TextView
                android:id="@+id/txtMontoMensual"
                android:layout_below="@+id/rgCreditoVivienda"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/montoMensualSolicitante" />

            <EditText
                android:id="@+id/txtMontoMesual"
                android:layout_below="@id/txtMontoMensual"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:padding="7dp"
                android:background="@drawable/my_comment"
                android:inputType="text"
                android:alpha="0.5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint="@string/comments" />

            <TextView
                android:id="@+id/lblTelefono"
                android:layout_below="@+id/txtMontoMesual"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/telefonoCasaSolicitante" />

            <EditText
                android:id="@+id/txtTelefono"
                android:layout_below="@id/lblTelefono"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:padding="7dp"
                android:background="@drawable/my_comment"
                android:inputType="text"
                android:alpha="0.5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint="@string/comments" />

            <TextView
                android:id="@+id/lblCelular"
                android:layout_below="@+id/txtTelefono"
                android:layout_marginTop="10dp"
