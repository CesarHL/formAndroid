                    android:id="@+id/lblCargoPublicoConyuge"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:text="@string/cargo_publicoConyuge" />
                <RadioGroup
                    android:id="@+id/grpBtnCargoPublicoConyuge"
                    android:layout_below="@id/lblCargoPublicoConyuge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/afirmativoCargoPublicoConyugeo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sí" />
                    <RadioButton
                        android:id="@+id/negativoCargoPublicoConyuge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:checked="true"
                        android:text="No"
                        tools:ignore="TooManyViews" />
                </RadioGroup>

                <EditText
                    android:id="@+id/txtEspecificarCargoPublicoConyuge"
                    android:layout_below="@+id/grpBtnCargoPublicoConyuge"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:padding="7dp"
                    android:inputType="text"
                    android:background="@drawable/my_comment"
                    android:alpha="0.6"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:hint="@string/comments"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
