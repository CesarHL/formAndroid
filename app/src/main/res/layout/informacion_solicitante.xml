                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/celularSolicitante" />

            <EditText
                android:id="@+id/txtCelular"
                android:layout_below="@id/lblCelular"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:padding="7dp"
                android:background="@drawable/my_comment"
                android:inputType="text"
                android:alpha="0.5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint="@string/comments" />

            <TextView
                android:id="@+id/lblCorreo"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/txtCelular"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/correoElectronicoSolicitante" />

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_below="@id/lblCorreo"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:padding="7dp"
                android:background="@drawable/my_comment"
                android:inputType="text"
                android:alpha="0.5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint="@string/comments" />

            <RelativeLayout
                android:id="@+id/cargoPublico"
                android:layout_below="@id/txtCorreo"
