<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <ImageView
        android:id="@+id/imgCheckPhoto"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tipoFoto"
        android:src="@drawable/uncheck_photo"
        android:padding="3dp"
        android:layout_alignParentTop="true">
    </ImageView>

    <RelativeLayout
        android:id="@+id/tipoFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgCheckPhoto"
        android:layout_toEndOf="@+id/imgCheckPhoto" >
        <TextView
            android:id="@+id/lblTipoFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            android:textColor="#000"
            android:text="IFE(Click)" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="104dp" />

</RelativeLayout>